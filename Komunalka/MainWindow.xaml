<Window x:Class="Komunalka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Komunalka"
        mc:Ignorable="d"
        Title="Комуналка" Height="400" Width="600" Icon="logo.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="270*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="dataXml" SelectionChanged="dataXml_SelectionChanged"/>
        <TextBlock x:Name="hide" Visibility="Hidden" Text=""></TextBlock>
        <Button Grid.Row="1" Content="Новая платёжка" Click="Button_Click"></Button>
    </Grid>
</Window>
